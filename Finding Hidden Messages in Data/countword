#Counts the number of times a pattern is detected

def PatternCount(text, pattern):
	count = 0
	correct = 0

	#loops through the text and matches pattern character by character
	for i in range(len(text)-len(pattern)):
		for j in range(len(pattern)):
			if(text[j + i] == pattern[j]):
				correct += 1
			print(text[j + i] + " " + pattern[j])
		if correct == len(pattern):
			count += 1
			correct = 0
			i += len(pattern) - 1
		else:
			correct = 0
		
		print("count: " + str(count))
	return count


#print(PatternCount("attg","at"))
#answer = 2
#print(PatternCount("atgat","cat"))
#answer = 0

#Check values
#input = ""
#check = "GGGCGCGGG"
#answer = 37

#input = "AGGGCGCGTCTGGGCGCGGGGCGCGGGG"
#check = "GGGC"
#answer = 3

input = ""
check = "CCCCGTGCC"
#answer = 37


print(PatternCount(input,check))
